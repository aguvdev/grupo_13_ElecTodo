<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head') %> 
<body>
    <!-- ----------HEADER------------- -->

    <!-- -----------MAIN------------ -->
    <main class="grilla-register">
        <div class="icono-electodo">
            <a href="/">
             <img src="/img/electodo log.png" alt="">
             </a>
        </div>
        <div class="cajacon"></div>
        <div class="register">
            <h2 class="title">Registrarse</h2>
            <form action="/users/register" class="formulario" id="formulario" method="POST">
                <!-- Grupo: Nombre -->
                <div class="formulario__grupo" id="grupo__nombreR">
                    <div class="formulario__grupo-input">
                        <i class="fas fa-user"></i>
                        <input type="text" class="formulario__input <%= locals.errors && errors.name ? 'is-invalid' : null%>" value="<%= locals.oldData ? oldData.name : null%>" name="name" id="nameR" placeholder="Escriba su nombre.">
                        <i id="check-nombreR" class="formulario__validacion-estado fas fa-times-circle"></i>
                    </div>
                    <% if (locals.errors && errors.name) { %>
                        <div class="text-danger">
                            <%= errors.name.msg %> 
                        </div>
                    <% } %>
                    <p id="formulario__input-error-nombreR" class="formulario__input-error">El nombre solo puede contener letras sin espacios.</p>
                </div>
    
                <!-- Grupo: Correo Electronico -->
                <div class="formulario__grupo" id="grupo__correoR">
                    <div class="formulario__grupo-input">
                        <i class="fas fa-at"></i>
                        <input type="email" class="formulario__input <%= locals.errors && errors.email ? 'is-invalid' : null%>" value="<%= locals.oldData ? oldData.email : null%>" name="email" id="emailR" placeholder="Escriba su correo.">
                        <i id="check-correoR" class="formulario__validacion-estado fas fa-times-circle"></i>
                    </div>
                    <% if (locals.errors && errors.email) { %>
                        <div class="text-danger">
                            <%= errors.email.msg %> 
                        </div>
                    <% } %>
                    <p id="formulario__input-error-correoR" class="formulario__input-error">El correo solo puede contener letras, numeros, puntos, guiones y guion bajo.</p>
                </div>
    
                <!-- Grupo: Correo de nuevo -->
                <div class="formulario__grupo" id="grupo__correo2R">
                    <div class="formulario__grupo-input">
                        <i class="fas fa-at"></i>
                        <input type="text" class="formulario__input <%= locals.errors && errors.emailagain ? 'is-invalid' : null%>" name="emailagain" id="emailagainR" placeholder = "Vuelva a escribir su correo.">
                        <i id="check-correo2R" class="formulario__validacion-estado fas fa-times-circle"></i>
                    </div>
                    <% if (locals.errors && errors.emailagain) { %>
                        <div class="text-danger">
                            <%= errors.emailagain.msg %> 
                        </div>
                    <% } %>
                    <p id="formulario__input-error-correo2R" class="formulario__input-error">Ambos correos deben ser iguales.</p>
                </div>

                <!-- Grupo: Contraseña -->
			    <div class="formulario__grupo" id="grupo__passwordR">
				<div class="formulario__grupo-input">
                    <i class="fas fa-lock"></i>
					<input type="password" class="formulario__input <%= locals.errors && errors.password ? 'is-invalid' : null%>" name="password" id="passwordR" placeholder="Escriba su contraseña">
					<i id="check-passwordR" class="formulario__validacion-estado fas fa-times-circle"></i>
				</div>
                <% if (locals.errors && errors.password) { %>
                    <div class="text-danger">
                        <%= errors.password.msg %> 
                    </div>
                <% } %>
				<p id="formulario__input-error-passwordR" class="formulario__input-error">La contraseña tiene que ser de 8 a 12 dígitos.</p>
			    </div>

			    <!-- Grupo: Contraseña 2 -->
			    <div class="formulario__grupo" id="grupo__password2R">
				<div class="formulario__grupo-input">
                    <i class="fas fa-lock"></i>
					<input type="password" class="formulario__input <%= locals.errors && errors.passwordagain ? 'is-invalid' : null%>" name="passwordagain" id="passwordagainR" placeholder="Vuelva a escribir su contraseña.">
					<i id="check-password2R" class="formulario__validacion-estado fas fa-times-circle"></i>
				</div>
                <% if (locals.errors && errors.passwordagain) { %>
                    <div class="text-danger">
                       <%= errors.passwordagain.msg %> 
                    </div>
                <% } %>
				<p id="formulario__input-error-password2R" class="formulario__input-error">Ambas contraseñas deben ser iguales.</p>
			    </div>

                <!-- Grupo: Terminos y Condiciones -->
			    <div class="formulario__grupo-terminos" id="grupo__terminosR">
				<label class="formulario__label">
					<input class="formulario__checkbox" type="checkbox" name="terminos" id="terminosR">
					Acepto los Terminos y Condiciones
				</label>
			    </div>

                <div class="formulario__mensaje" id="formulario__mensaje">
                    <p><i class="fas fa-exclamation-triangle"></i> <b>Error:</b> Por favor rellena el formulario correctamente. </p>
                </div>

			    <div class="formulario__grupo formulario__grupo-btn-enviar">
                    <input type="submit" id='btn1' value="Enviar" class="formulario__btn" />
			    </div>
            </form>
        </div>
        <div class="panels-container">
            <div class="panel right-panel">
              <div class="content">
                <h3>¿Ya tenés cuenta?</h3>
                <p>
                  ¡Dale al botón para iniciar sesión!
                </p>
                <a href="/users/login">
                    <button class="btn transparent" id="sign-up-btn">
                    Login
                  </button>
                  </a>
              </div>
              <img src="/img/register.svg" class="image" alt="" />
            </div>
        </div>
    </main>
    <%- include('../partials/footer') %> 
    <%- include('../partials/scripts') %>
</body>
</html>