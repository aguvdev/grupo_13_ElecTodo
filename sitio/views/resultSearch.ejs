<!DOCTYPE html>
<html lang="es">

        <%- include('./partials/head') %>
        
        <body>
            <%- include('./partials/header') %>
            

            <main class="search cuerpo">

              <% if (Producto.length > 0) { %>
              <div class="container">
              
              
              <div class="row">
                  <section class="productos col-12 col-lg-9 ">
                      <h3 class="">Resultados de la busqueda de: "<%= name %>"</h3>
                      
                      <div class="celulares row py-2 gx-3">
                        <% Producto.forEach(producto => { %>
                          <div class="col-12 col-md-4 my-2">
                              <article class="p-3">
                                <div class="contenido-search">
                                  <a href="/product/detalle-product/<%= producto.id %>">
                                    <h4 class="text-secondary text-center"><%= producto.name %> </h4>
                                    <div class="cont-img">
                                      <img src="/img/products/<%= producto.images[0].name ? producto.images[0].name  : null %>" alt="error no hay imagen papa carga una ">                                        
                                    </div>
                                    
                                    <% if (producto.discount> 0) { %>
                                      <h2 class="preciosearch"> $<%= (producto.price - (producto.discount * producto.price /100).toFixed(0)) %>
                                      </h2>
                                      <span class="preciodescuento"> $<%= producto.price %>
                                          <%= producto.discount %>% OFF</span>
                                      <% }else { %>
                                        <h2 > $<%= producto.price %></h2>
                                        <% } %>
                                      </a>
                                </div>
                            </article>
                            
                          </div>
                          
                        <% }) %>
                        
                      
                  </div>
                  </section>
                  <aside class="col-12 col-lg-3">
                      <section class="publicidad">
                          <h3 class="">Sitio publicitario</h3>
                          <article class="row">
                              <div class="col-12 col-md-6 col-lg-12 my-3">
                              <img  src="/img/mcdonald.jpg" alt="" />
                              </div>
                              <div class="col-12 col-md-6 col-lg-12 my-3">
                              <img  src="/img/cocacola.jpg" alt="" />
                              </div>
                          </article>
                      </section>
                  </aside>
                
              </div>
              
            </div>
          </main>
          <% } else{ %>
            <p></p> <br> <p></p>
            <p></p> <br> <p></p>
            <p></p> <br> <p></p>
            <h1 class="bg-light" style="color: rgb(196, 73, 73);">No hay resultado para la busqueda de : "<%= name %>" <br> Escriba bien el nombre del producto por favor</h1>
            <% } %>
        

    <%- include('./partials/footer') %>
    <%- include('./partials/scripts') %>
</body>
</html>