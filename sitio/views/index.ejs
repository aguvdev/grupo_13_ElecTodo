          <!-- ---------------RECOMENDACIONES--------------- -->
          <section class="recomendaciones">
            <!-- -----GAMING----- -->
            <div class="recom-gamCelNote">
              <!-- CUADRO DE SECCION -->
              <div class="cont-cuadro-gamCelNote">
                <div class="cuadro-gamCelNote">
                  <img src="/img/gamingTeclado.png" alt="">
                  <div class="tit-secc">
                    <label>Videojuegos</label>
                  </div>
                </div>
              </div>
              <!-- carousel -->

              <div class="carousel">

                <div class="carousel__contenedor">

                  <button aria-label = "Anterior" class="carousel__anterior">
                    <i class="fas fa-chevron-left"></i>
                  </button>

                  <div class="carousel__listaGam">

                    <% videojuegos.forEach(product=> { %>
                      <article class="cont-tarj-prod">
                        <div class="tarj-prod">
                          <a href="product/detalle-product/<%= product.id %>">
                          <div class="img-prod">
                            <img src="/img/products/<%= product.images[0].name %>" alt="error no hay imagen papa carga una ">

                          </div>
                        </a>
                          <div class="info-prod">
                            <!-- titulo -->
                            <h4>

                              <%= product.name %>
                            </h4>
                            <!-- descripcion -->
                            <p>
                              <%= product.description %>
                            </p>
                            <!-- precio -->
                            <% if (product.discount> 0) { %>
                              <h3> $<%= (product.price - (product.discount * product.price /100).toFixed(0)) %>
                              </h3>
                              <span> $<%= product.price %>
                                  <%= product.discount %>% OFF</span>
                              <% }else { %>
                                <h3> $<%= product.price %>
                                </h3>
                                <% } %>
                                <a href="product/detalle-product/<%= product.id %>">
                                    <button>Más Info</button>
                                  </a>
                          </div>
                        </div>
                      </article>
                      <% }) %>
                    
                    </div>

                  <button aria-label = "Siguiente" class="carousel__siguiente">
                    <i class="fas fa-chevron-right"></i>
                  </button>

                </div>

                <div role="tablist" class="carousel__indicadores"></div>

              </div>

            </div>
            <!-- -----CELULARES----- -->
            <div class="recom-gamCelNote">
              <!-- CUADRO DE SECCION -->
              <div class="cont-cuadro-gamCelNote">
                <div class="cuadro-Cel">
                  <img src="/img/celular-sect.png" alt="">
                  <div class="tit-secc">
                    <label>Celulares</label>
                  </div>
                </div>
              </div>
              <div class="carousel">

                <div class="carousel__contenedor">

                  <button aria-label = "Anterior" class="carousel__anteriorCel">
                    <i class="fas fa-chevron-left"></i>
                  </button>

                  <div class="carousel__listaCel">

                    <% celulares_y_tablets.forEach(product=> { %>
                      <article class="cont-tarj-prod">
                        <div class="tarj-prod">
                          <a href="product/detalle-product/<%= product.id %>">
