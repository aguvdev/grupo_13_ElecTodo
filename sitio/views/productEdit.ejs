<!DOCTYPE html>
<html lang="es">

        <%- include('./partials/head') %>
        
        <body>
            <%- include('./partials/header') %>
        
            <!-- MENUU -->
        
            <main class="carga">

                <form action="/product/edit/<%= producto.id %>?_method=PUT" method="POST">
                <div class="seccionesProducto">
                                    
                 <div class="secciones-imagen-carga">           
        
                        <div class="mb-3">
                            <label for="productImagen" class="form-label"> imagen </label>
                            <input type="file" class="form-contro" id="formGroupExampleInput2"
                                placeholder="ingrese precio" name="image" value="<%= producto.image %>">
                        </div>
                      
        
                </div>
        

                        <div class="secciones-formulario-carga">
                            <section class="formulario-carga">
                                <input class="texto-carga" type="text" placeholder="Nombre:" name="name" value="<%= producto.name %>">
                            </section>
                            <section class="formulario-carga2">
                                <input class="texto-carga" type="text" placeholder="Modelo:" name="model" value="model" >
                            </section>
                            <select class="formulario-category" name="category">
                                <% categorias.forEach(categoria => { %>
                                    <option value="<%= categoria %>"<%= categoria === producto.category ? "selected" : null %> ><%= categoria %></option>
                                <% }) %>
                              </select>
                            <section class="formulario-carga2">
                                <input class="texto-carga" type="number" placeholder="Precio $:" name="price" value="<%= producto.price %>">
                            </section>
                            <section class="formulario-carga2">
                                <input class="texto-carga" type="text" placeholder="Descuento %:" name="discount" value="<%= producto.discount %>">
                            </section>
                            <section class="formulario-descripcion-carga">
                                <input class="texto-carga-espe" type="text" placeholder="DescripciÃ³n del producto:" name="description" value="<%= producto.description %>">
                            </section>                       
                            
                                          
                        
                        </div>
                       
                 </div>           
                         
                <div class="secciones-subir-cancelar">
                    <section class="subir-carga">
                        <button class="btn btn-primary" type="submit">guardar</button>
                    </section>
                    <section class="cancelar-carga">
                        <button>
                            <a href="">
                            <i class="fas fa-times"></i><p> Cancelar</p>
                            </a>
                        </button>
                    </section>
                </div>
            </form>
    </main>
    <%- include('./partials/footer') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>